.contacts
  padding 10rem 0
  &__form
    width 100%
    padding 4.4rem 6.6rem
    box-shadow: 0 1rem 2.4rem RGBA(0,0,0,.1);
    &_string
      display flex
      justify-content: space-between
      align-items: flex-start
    &_item
      width 100%
      margin-right 3rem
      position: relative
      &:last-child
        margin-right 0
      & label
        display block
        font-size 1.4rem
        color #BEBEBE
        font-family: Roboto
        font-weight: 400
    &_label
      position: absolute
      top 0.8rem
      left 0.8rem
      transition: .3s
      pointer-events: none
    &_input
      width 100%
      font-size 1.4rem
      color #727272
      border none
      padding 1.4rem 0.8rem 0.8rem 0.8rem
      border-bottom 1px solid #BEBEBE
      margin-bottom 5.4rem
      transition 0.3s
      background transparent
      position relative
      &:hover
        border-bottom 1px solid #727272
      &:focus
        border-bottom 1px solid #727272
    &_footer
      text-align center
    &_offer
      display flex
      font-family: Roboto
      font-size 1.4rem
      color #ACACAC
      margin-bottom 5rem
      & label
        display: inline-block
        min-width: 16px;
        width 16px
        height 16px
        background url('../images/checkbox-no.png') center center no-repeat
        background-size contain
        margin-right 2rem
        position relative
        cursor pointer
      & input
        display none
        margin-right 14px
      &_inner
        & span
          color #187CC8
          text-decoration: underline
          cursor pointer
.contacts__form_input:focus + .contacts__form_label, .contacts__form_input:valid + .contacts__form_label
  top -2rem
  left 0.8rem


.contacts__form_offer input[type='checkbox']:checked + span
  position: absolute
  left 0
  top 0
  min-width: 16px;
  width 16px
  height: 16px
  cursor: pointer
  background url('../images/checkbox-ye.png') center center no-repeat
  background-size contain



@media (max-width:1024px)
  .contacts
    padding 6rem 0
    &__title
      font-size 1.6rem
      margin-bottom 1.8rem
    &__link
      font-size 1.4rem
      margin-bottom 1.6rem
    &__item
      margin-bottom 3rem
    &__form
      padding 3rem 7rem
      &_title
        font-size 1.8rem
      &_string
        display block
      &_input
        font-size 1.4rem
        margin-bottom 1.6rem
      &_offer
        margin-bottom 3rem
        &_inner
          font-size 1.2rem
          line-height 2.2rem
    &__left
      width 100%
      margin-bottom 3rem
      margin-right 0
    &__right
      width 100%

@media (max-width:800px)
  .contacts
    &__form
      padding 3rem 4rem

@media (max-width:680px)
  .contacts
    padding 4.6rem 0
    &__map
      width 100%
    &__item
      margin-bottom 3rem
    &__form
      padding 3rem 4.2rem
      &__title
        font-size 1.8rem
        margin-bottom 3.4rem
      &_input
        font-size 1.4rem
        margin-bottom 1.6rem
      &_offer
        margin-bottom 2rem
        &_inner
          font-size 1.2rem
          line-height 2.2rem
