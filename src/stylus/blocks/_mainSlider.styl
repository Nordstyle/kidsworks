.mainSlider
  width 100%
  margin 0 auto
  margin-top 10rem
  & .swiper-container
    width: 100% !important
  & .swiper-wrapper 
    width: 100% !important
  &__img 
    width 100%
    height: 54rem
    object-fit: cover
  &__button
    margin-top 5rem
.mainSlider .swiper-slide-active
  transition: .5s;
  transform: scale(1)

.mainSlider .swiper-slide-prev,
.mainSlider .swiper-slide-next
  transform: scale(0.9);
  transition: .5s;

.mainSlider .swiper-button-prev, .mainSlider .swiper-button-next
  background: none
  width 62px
  height 62px
  transform: translateY(-50%)

.mainSlider.swiper-button-next, .mainSlider.swiper-button-prev
  top 26%