*
  margin 0
  padding 0
  box-sizing border-box
  outline: none
  text-decoration none

html
  font-size: 10px
  font-family Roboto
  color #363636
  font-weight normal

#wrapper
  width 100%
  overflow-x: hidden

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 0.6rem
  padding-right 0.6rem

.politic__open 
  color rgb(173, 2, 1)
  cursor pointer

.call__wrapper .tingle-modal-box__content
  padding 0

.call__wrapper .tingle-modal-box
  max-width: 38rem

.alertify-logs 
  font-size 1.6rem

@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 9px

@media (max-width: 1280px)
  html
    font-size: 8px

@media (max-width: 1024px)
  html
    font-size: 7px
  .section
    &__block
      padding: 2rem 0 4rem

@media (max-width: 1000px)
  html
    font-size: 10px

@media (max-width: 867px)
  html
    font-size: 8px

@media (max-width: 667px)
  .section
    &__title 
      font-size 2.8rem
      margin-bottom 3rem

@media (max-width: 540px)
  .call__wrapper .tingle-modal-box
    max-width: 100%
    margin: 0 auto;
    height 100%
  .call__wrapper .tingle-modal__close, .politic_wrapper .tingle-modal__close
    background: white
    border-bottom: 1px solid rgba(0,0,0,0.1);

  .call__wrapper .tingle-modal__closeLabel, .politic_wrapper .tingle-modal__closeLabel
    color #363636

  .call__wrapper .tingle-modal__closeIcon, .politic_wrapper .tingle-modal__closeIcon
    color rgb(173, 2, 1)
